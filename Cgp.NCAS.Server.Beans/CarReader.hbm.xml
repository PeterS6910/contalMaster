<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Contal.Cgp.NCAS.Server.Beans.CarReader, Cgp.NCAS.Server.Beans" select-before-update="true">
    <cache usage="read-write"/>
    <id name="IdCarReader">
      <generator class="guid" />
    </id>
    <property name="CameraType" not-null="false" />
    <many-to-one name="DCU" column="DCU" class="Contal.Cgp.NCAS.Server.Beans.DCU, Cgp.NCAS.Server.Beans" not-null="false" unique-key="DCUCCUPortAddress"/>
    <many-to-one name="CCU" column="CCU" class="Contal.Cgp.NCAS.Server.Beans.CCU, Cgp.NCAS.Server.Beans" not-null="false" unique-key="DCUCCUPortAddress"/>
    <property name="IpAddress" not-null="false" />
    <property name="Port" not-null="false" />
    <property name="Description" not-null="false">
      <column name="Description" sql-type="NVARCHAR(MAX)" />
    </property>
    <bag name="CarReaderAlarmArcs" cascade="all-delete-orphan">
      <key column="CarReader" />
      <one-to-many class="Contal.Cgp.NCAS.Server.Beans.CarReaderAlarmArc" />
    </bag>
    <property name="Version" not-null="false" />
    <join table="CentralNameRegister">
      <key column="Id" foreign-key="none" />
      <property name="Name" column="Name" not-null="true" />
      <property name="ObjectType" not-null="true" />
    </join>
  </class>
</hibernate-mapping>